
@page
@model InputModel
@{
    ViewData["Title"] = "Input";
}
<h1>Wat zou ze moeten doen?</h1>

<p>Vul dit formulier in en geef je advies</p>
@using (Html.BeginForm("Edit", "Input", FormMethod.Post)) {
<p>Voornaam:</p>
@Html.TextBoxFor(model => model.Voornaam)
<p>Achternaam:</p>
@Html.TextBoxFor(model => model.Achternaam)
<p>Advies:</p>
@Html.TextBoxFor(model => model.Advies)
<br>
<br>
<input type="submit" value="Geef Advies"/>
}
